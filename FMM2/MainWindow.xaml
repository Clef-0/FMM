                                                    <Binding ElementName="downloadableModsList" Path="SelectedItem.Warnings"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </StackPanel>
                                </ScrollViewer>
                                <Button x:Name="infobarDLDownload" Content="Download Checked Mods" Margin="10" Grid.Row="1" Click="infobarDLDownload_Click"/>
                            </Grid>
                        </Grid>
                    </Grid>
                </TabItem>
            </TabControl>
