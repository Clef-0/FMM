                                                        <TextBlock x:Name="infobarDLAuthor" Text="{Binding SelectedItem.Author, ElementName=downloadableModsList}" VerticalAlignment="Top" Padding="0" FontSize="7" Foreground="White" TextWrapping="Wrap"/>
                                                        <TextBlock x:Name="infobarDLCredits" Text="{Binding SelectedItem.Credits, ElementName=downloadableModsList}" VerticalAlignment="Top" Padding="0" FontSize="5" Foreground="White" TextWrapping="Wrap"/>
