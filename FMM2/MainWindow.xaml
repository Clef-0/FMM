                                                                <GradientStop Color="#00555555" Offset="0.3"/>
                                                                <GradientStop Color="#22555555" Offset="0.5"/>
                                                                <GradientStop Color="#77555555" Offset="0.748"/>
                                                            </LinearGradientBrush>
                                                        </Rectangle.Fill>
                                                    </Rectangle>
                                                    <StackPanel x:Name="infobarDLHeader" ScrollViewer.VerticalScrollBarVisibility="Disabled" VerticalAlignment="Bottom" Margin="3,0,28,3">
